{% extends '::dashboard.html.twig' %}

{% block container %}
<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Panel de Control <small>Información Corporativa</small>
        </h1>
        <!--<ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-dashboard"></i> Principal
            </li>
        </ol>-->
    </div>
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i> Información Corporativa</h3>
            </div>
            <div class="panel-body">
                <form role="form">

                    <div class="form-group">
                        <label>Nombre</label>
                        <input class="form-control" placeholder="EDIDEP Chile" value="EDIDEP Chile">
                        <p class="help-block">Nombre de la empresa.</p>
                    </div>

                    <div class="form-group">
                        <label>Líneas de Productos</label>
                        <input class="form-control" type="number" min="1" max="9" value="1">
                        <p class="help-block">Número de líneas de productos.</p>
                    </div>

                    <div class="form-group">
                        <label>¿Qué Ofrecemos?</label>
                        <textarea class="form-control" rows="3"></textarea>
                        <p class="help-block">Información de lo que ofrece la empresa.</p>
                    </div>

                    <div class="form-group">
                        <label>Misión</label>
                        <textarea class="form-control" rows="3"></textarea>
                        <p class="help-block">Misión de la empresa.</p>
                    </div>

                    <div class="form-group">
                        <label>Visión</label>
                        <textarea class="form-control" rows="3"></textarea>
                        <p class="help-block">Visión de la empresa.</p>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
{% endblock %}